page {
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}

.wordtype-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #fff;
  position: absolute;
  left: 0;
  top: 0;
}

.wordtype-top-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 24rpx;
}

.top-color {
  width: 10rpx;
  height: 42rpx;
  background: #ff7b7b;
  border-radius: 5px;
  margin-left: 50rpx;
}

.wordtype-top {
  color: #000;
  font-size: 38rpx;
  font-weight: 600;
  margin-left: 10rpx;
}

.wordtype-item-wrapper{
  width: 30%;
  height: 260rpx;
  margin-bottom: 24rpx;
  margin-left: 20rpx;
  position: relative;
}

.wordtype-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border-radius: 2px;
  justify-content: center;
  align-items: center;
}

.word-type-btn{
  width: 100%;
  height: 260rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.wordtype-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6px;
}

.en-wordtype {
  height: 46rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  color: #555;
  text-overflow: ellipsis;
}

.cn-wordtype {
  font-size: 30rpx;
  color: #0a1839;
}

.bottom-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  border-top: 1rpx solid #f8f8f8;
}

.bottom-txt {
  color: #cdcdcd;
  font-size: 26rpx;
}

.version-content {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.word-style {
  font-size: 36rpx;
  color: #3d3d3c;
}

.word-version {
  font-size: 26rpx;
  color: #aaa;
  padding: 4px;
  margin-left: 10%;
  border-radius: 3px;
  border: 1px solid #aaa;
}

button,button::after{
  border: 0;
  background: rgba(255, 255, 255, 0);
}