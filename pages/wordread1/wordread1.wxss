page {
  width: 100%;
  height: 100%;
  background: #78c8ff;
}

swiper {
  width: 750rpx;
  height: 920rpx;
}

swiper-item {
  padding-top: 80rpx;
  height: 100%;
  width: 100%;
}

.slide-image-view-wrapper {
  width: 500rpx;
  height: 720rpx;
  position: absolute;
  left: 5%;
  margin-left: 18rpx;
  background: #fff;
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.slide-image-view {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.current-num {
  position: absolute;
  left: 28rpx;
  top: 28rpx;
}

.slide-image {
  width: 500rpx;
  height: 500rpx;
}

.slide-image-view-wrapper.active {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
}

.word-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.en-word {
  font-size: 52rpx;
  color: #000;
  font-weight: 500;
}

.cn-word {
  font-size: 32rpx;
  color: #000;
  margin-top: 20rpx;
}

.keep-img {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 28rpx;
  bottom: 28rpx;
}

.word-play-view {
  width: 80%;
  height: 250rpx;
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10%;
  justify-content: space-around;
}

.play-view {
  width: 33%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.play-img {
  width: 140rpx;
  height: 220rpx;
}

.play-txt {
  color: #333;
  font-size: 26rpx;
  margin-top: -10rpx;
}

/** 弹窗**/

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
  background-size: 100% 100%;
}

.modal-dialog {
  position: fixed;
  width: 540rpx;
  left: 105rpx;
  top: 250rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  z-index: 9999;
  display: flex;
  border-radius: 20rpx;
}

.modal-top {
  width: 540rpx;
  height: 400rpx;
  background: white;
  border-radius: 20rpx;
  background: #fc696e;
  position: relative;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
  margin-top: 150rpx;
}

.modal-title {
  font-size: 50rpx;
  color: #fff;
  height: 150rpx;
  line-height: 150rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: #fc696e;
  margin-left: 30rpx;
}

.line-view {
  width: 500rpx;
  height: 10rpx;
  margin-left: 20rpx;
  background: #f9a728;
}

.vip-remark {
  height: 80rpx;
  line-height: 80rpx;
  background: #fc696e;
  color: #fff;
  margin-left: 30rpx;
  font-size: 28rpx;
}

.viy-buy {
  width: 540rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: white;
  background: #ffdf0e;
  color: #000;
  font-weight: 600;
  font-size: 36rpx;
  position: absolute;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  bottom: 0;
  left: 0;
}

.vip-price {
  width: 190rpx;
  height: 105rpx;
  position: absolute;
  top: 20rpx;
  right: 50rpx;
}

.top-close {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  top: -22rpx;
  right: -22rpx;
}

.modal-content {
  padding: 50rpx 32rpx;
  display: flex;
  border-radius: 4rpx;
  font-size: 30rpx;
  flex-direction: column;
  justify-content: center;
}

.model-content-item {
  display: flex;
  justify-content: center;
}

.app-name {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}

.down-tip {
  margin-top: 50rpx;
}

.down-tip text {
  font-size: 26rpx;
  color: #333;
  margin-top: 10rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.close-image {
  width: 60rpx;
  height: 60rpx;
}
