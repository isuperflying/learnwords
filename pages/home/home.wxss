/* pages/home/home.wxss */

page {
  width: 100%;
  height: 100%;
  background: #e1f7fe;
}

.content-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-radius: 8px;
}

.user-info-view {
  width: 90%;
  height: 200rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 60rpx;
  font-size: 30rpx;
  border-radius: 8px;
  padding: 12rpx;
}

.user-head-wrapper {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user-head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
}

.nick-name {
  margin-top: 5rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.sign-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sign-day-img {
  width: 80rpx;
  height: 80rpx;
}

.sign-txt {
  font-size: 28rpx;
  color: #000;
}

.money-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.money-img {
  width: 80rpx;
  height: 80rpx;
}

.money-txt {
  font-size: 28rpx;
  color: #000;
}

.train-view {
  width: 90%;
  height: 256rpx;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 12rpx;
  border-radius: 8px;
}

.base-train-img {
  width: 450rpx;
  height: 248rpx;
  border-radius: 8px;
}

.rank-img {
  width: 219rpx;
  height: 248rpx;
  margin-left: 20rpx;
  border-radius: 8px;
}

.keep-mail-view {
  width: 90%;
  height: 256rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 12rpx;
  border-radius: 8px;
}

.my-keep-img {
  width: 219rpx;
  height: 248rpx;
  border-radius: 8px;
}

.score-mail-img {
  width: 450rpx;
  height: 248rpx;
  margin-left: 20rpx;
  border-radius: 8px;
}

.bottom-img {
  width: 750rpx;
  height: 122rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}

.test-img {
  width: 80rpx;
  height: 80rpx;
}
