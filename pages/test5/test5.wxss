page {
  width: 100%;
  height: 100%;
  background: #78c8ff;
}

swiper {
  width: 750rpx;
  height: 920rpx;
}

swiper-item {
  padding-top: 80rpx;
  height: 100%;
  width: 100%;
}

.slide-image-view {
  width: 500rpx;
  height: 720rpx;
  position: absolute;
  left: 5%;
  margin-left: 18rpx;
  background: #fff;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slide-image {
  width: 375rpx;
  height: 375rpx;
}

.slide-image-view.active {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
}
