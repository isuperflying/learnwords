page {
  width: 100%;
  height: 100%;
  background: #78c8ff;
}

swiper {
  width: 750rpx;
  height: 920rpx;
}

swiper-item {
  padding-top: 80rpx;
  height: 100%;
  width: 100%;
}


.slide-image-view-wrapper {
  width: 500rpx;
  height: 720rpx;
  position: absolute;
  left: 5%;
  margin-left: 18rpx;
  background: #fff;
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.slide-image-view {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.current-num {
  position: absolute;
  left: 28rpx;
  top: 28rpx;
}


.slide-image {
  width: 500rpx;
  height: 500rpx;
}

.slide-image-view-wrapper.active {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
}

.word-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.en-word {
  font-size: 52rpx;
  color: #000;
  font-weight: 500;
}

.cn-word {
  font-size: 32rpx;
  color: #000;
  margin-top: 20rpx;
}

.keep-img {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 28rpx;
  bottom: 28rpx;
}

.word-play-view {
  width: 80%;
  height: 250rpx;
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10%;
  justify-content: space-around;
}

.play-view {
  width: 33%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.play-img {
  width: 140rpx;
  height: 220rpx;
}

.play-txt {
  color: #333;
  font-size: 26rpx;
  margin-top: -10rpx;
}