page {
  width: 100%;
  height: 100%;
}

.swiper-container {
  width: 750rpx;
  height: 100%;
  position: relative;
  background-color:#78c8ff;
}

.swiper_box {
  width: 100%;
  height: 100%; /*562.5rpx;*//**/
  overflow: visible;
}

.swiper_item {
  overflow: visible;
  border-radius: 50%;
  height: 100%;
}

.slide-image-view {
  width: 100%;
  overflow: hidden;
  height: 88%; /*562.5rpx;*/
  border-radius: 35rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.slide-image {
  /*swiper-item image */
  width: 480rpx;
  height: 480rpx;
}

.swiper-container .dots {
  position: relative;
  bottom: 10rpx;
  margin: 20rpx 30rpx 0 0;
  display: flex;
  justify-content: flex-end;
}

.swiper-container .dots .dot {
  margin: 0 10rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #999;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  background-color: red;
  opacity: 1;
}
