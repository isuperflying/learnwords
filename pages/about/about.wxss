page {
  width: 100%;
  height: 100%;
  background: #78c8ff;
}

.kefu {
  width: 90%;
  display: flex;
  margin-left: 5%;
  background: #fff;
  flex-direction: row;
  border-radius: 10px;
  justify-content: center;
  align-items: center;
  margin-top: 10%;
}

.kefu-text {
  color: #000;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.kefu-number {
  color: #10be0a;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
}

.number-copy {
  color: #5023ca;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
}

.gzh {
  width: 90%;
  display: flex;
  margin-left: 5%;
  background: #fff;
  flex-direction: column;
  border-radius: 10px;
  margin-top: 50rpx;
  justify-content: center;
  align-items: center;
}

.gzh-text {
  color: #000;
  font-size: 46rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.gzh-kefu {
  color: #aaa;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.gzh-img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 10px;
}

.down-img {
  color: #5023ca;
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-bottom: 50rpx;
}

.remark-us {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 10rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.remark-text {
  width: 500rpx;
  font-size: 22rpx;
  color: #999;
}